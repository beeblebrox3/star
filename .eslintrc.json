{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "classes": true,
            "jsx": true
        },
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "globals": {
        "require": true
    },
    "rules": {
        "strict": 0,
        "no-underscore-dangle": "warn",
        "no-alert": "error",
        "camelcase": "warn",
        "eqeqeq": "warn",
        "react/display-name": "off"
    },
    "plugins": [
        "react"
    ],
     "settings": {
        "react": {
            "createClass": "createClass",
            "pragma": "React"
        }
    }
}
