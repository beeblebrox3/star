{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "globals": {
        "require": true
    },
    "rules": {
        "no-underscore-dangle": "warn",
        "no-alert": "error",
        "camelcase": "warn",
        "eqeqeq": "warn",

        "react/display-name": "error"
    },
    "plugins": [
        "react"
    ],
     "settings": {
        "react": {
            "createClass": "createClass",
            "pragma": "React"
        }
    }
}
